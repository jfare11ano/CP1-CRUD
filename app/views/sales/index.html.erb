<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Cod</th>
      <th>Detail</th>
      <th>Category</th>
      <th>Value</th>
      <th>Discount</th>
      <th>Tax</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.cod %></td>
        <td><%= sale.detail %></td>
        <td><%= sale.category %></td>
        <td><%= sale.value %></td>
        <td><%= sale.discount %></td>
        <td><%= sale.tax %></td>
        <td><%= sale.total %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

